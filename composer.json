{
    "name": "n5s/wp-symfony-local-server",
    "description": "A set a hooks to fix running WordPress on Symfony Local Server with local domain names",
    "license": "MIT",
    "authors": [
        {
            "name": "Nicolas Lemoine",
            "email": "nico@n5s.dev"
        }
    ],
    "require": {
        "php": "^8.0",
        "wecodemore/wordpress-early-hook": "^1.2"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.37",
        "php-stubs/wordpress-stubs": "^6.7",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan": "^2.1",
        "symplify/easy-coding-standard": "^12",
        "szepeviktor/phpstan-wordpress": "^2.0"
    },
    "autoload": {
        "files": [
            "src/bootstrap.php"
        ]
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true,
            "phpstan/extension-installer": true
        }
    },
    "scripts": {
        "cs": "ecs check",
        "cs:fix": "ecs check --fix"
    }
}
